<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Session Icon -->
        <ImageView
            android:id="@+id/iv_session_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:background="@drawable/value_background"
            android:contentDescription="Session icon"
            android:padding="8dp"
            android:src="@drawable/ic_accelerometer"
            app:tint="@color/material_dynamic_primary0" />

        <!-- Session Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Date/Time -->
            <TextView
                android:id="@+id/tv_session_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                tools:text="Dec 15, 2024 14:30" />

            <!-- File name -->
            <TextView
                android:id="@+id/tv_session_filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="monospace"
                tools:text="accelerometer_data_1702647000000.csv" />

            <!-- File size -->
            <TextView
                android:id="@+id/tv_session_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="2.45 MB" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <!-- View/Details Button -->
            <ImageButton
                android:id="@+id/btn_view_session"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_info"
                android:contentDescription="View session details"
                app:tint="?attr/colorOnSurfaceVariant" />

            <!-- Share Button -->
            <ImageButton
                android:id="@+id/btn_share_session"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Share session"
                android:src="@drawable/ic_share"
                app:tint="?attr/colorOnSurfaceVariant" />

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/btn_delete_session"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete session"
                android:src="@drawable/ic_delete"
                app:tint="@color/error_color" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>