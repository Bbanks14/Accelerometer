<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color for selected state -->
    <solid android:color="@color/axis_button_selected_background" />

    <!-- Border for selected state -->
    <stroke
        android:width="2dp"
        android:color="@color/axis_button_selected_border" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding inside the button -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />

</shape>