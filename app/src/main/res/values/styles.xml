<resources>

    <!-- Custom Alert Dialog Style -->
    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <!-- Remove default background -->
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- Remove window frame/border -->
        <item name="android:windowFrame">@null</item>

        <!-- Allow custom background shape -->
        <item name="android:windowIsFloating">true</item>

        <!-- Dim background -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>

        <!-- Dialog sizing -->
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>

        <!-- Animation -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>

        <!-- Remove title bar -->
        <item name="android:windowNoTitle">true</item>

        <!-- Content overlay -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- Elevation -->
        <item name="android:elevation">8dp</item>
    </style>

    <!-- Dialog Animation Style -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!-- Alternative Custom Dialog Style with rounded corners -->
    <style name="CustomRoundedDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/value_background</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!-- Dark Theme Custom Dialog -->
    <style name="CustomAlertDialogDark" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:elevation">12dp</item>
        <item name="android:textColorPrimary">@color/text_secondary</item>
        <item name="android:textColorSecondary">@color/text_tertiary</item>
    </style>

</resources>